{
    "search.exclude": {
        // disable built-in rule
        "**/node_modules": false,

        ".nyc_output/**": true,

        "coverage/**": true,

        "server.log": true,

        // only exclude root node_modules
        "node_modules": true
    },
    "files.watcherExclude": {
        // disable built-in rule
        "**/node_modules/**": false,

        // only exclude root node_modules
        "node_modules/**": true
    },
    "eslint.enable": true,
    "eslint.autoFixOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "standard.enable": false,
    "cSpell.words": [
        "Postgre",
        "Postgres",
        "bigint",
        "smallint"
    ]
}