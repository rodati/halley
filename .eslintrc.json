{
  "env": {
    "node": true
  },
  "parserOptions": {
    "sourceType": "script"
  },
  "extends": "standard",
  "rules": {
    "no-var": "error",
    "prefer-const": "error",
    "prefer-rest-params": "error",
    "prefer-spread": "error",
    "prefer-template": "error",
    "strict": ["error", "global"]
  }
}